<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <header>
        <h1>Welcome to Your Dashboard</h1>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
    </header>

    <!-- Flash messages -->
    <% if (error_msg) { %>
        <div class="alert alert-danger">
            <%= error_msg %>
        </div>
    <% } %>

    <% if (success_msg) { %>
        <div class="alert alert-success">
            <%= success_msg %>
        </div>
    <% } %>

    <!-- Search Form -->
    <form action="/files/dashboard" method="GET" style="margin-bottom: 20px;">
        <input type="text" name="query" placeholder="Search by title" value="<%= query %>" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <!-- Show upload form only if user is admin -->
    <% if (isAdmin) { %>
        <!-- Upload Form -->
        <form action="/files/upload" method="POST" enctype="multipart/form-data">
            <input type="text" name="title" placeholder="Title" required />
            <textarea name="description" placeholder="Description" required></textarea>
            <input type="file" name="file" required />
            <button type="submit">Upload File</button>
        </form>
    <% } %>

    <!-- Display Uploaded Files -->
    <h2>Uploaded Files</h2>
    <ul>
        <% files.forEach(file=> { %>
            <li>
                <strong>
                    <%= file.title %>
                </strong>: <%= file.description %>

                <!-- Show downloadCount and shareCount only if user is admin -->
                <% if (isAdmin) { %>
                    <span>Downloads: <%= file.downloadCount %></span>
                    <span>Shares: <%= file.shareCount %></span>
                <% } %>

                <!-- Share Form -->
                <form action="/files/share/<%= file._id %>" method="POST"
                    style="display:inline;">
                    <input type="email" name="email" placeholder="Recipient's Email"
                        required />
                    <button type="submit" class="btn btn-primary">Share</button>
                </form>

                <!-- Show delete form only if user is admin -->
                <% if (isAdmin) { %>
                <form action="/files/delete/<%= file._id %>?_method=DELETE"
                    method="POST" style="display:inline;">
                    <input type="hidden" name="_method" value="DELETE" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <form action="/files/download/<%= file._id %>" method="GET" style="display:inline;">
                    <button type="submit" class="btn btn-secondary">Download</button>
                </form>
                <% } %>
            </li>
        <% }); %>
    </ul>
</body>

</html>